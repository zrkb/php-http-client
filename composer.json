{
    "name": "zrkb/php-http-client",
    "description": "Simple PHP HTTP client based on Guzzle for calling JSON RESTful APIs",
    "keywords": [
        "php",
        "http",
        "client",
        "api",
        "rest",
        "json",
        "guzzle"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Felix Ayala",
            "email": "hi@felixaya.la"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "guzzlehttp/guzzle": "^6.3|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Zero\\Http\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
